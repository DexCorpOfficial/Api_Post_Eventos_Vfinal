@model Api_Post_Eventos_Vfinal.Models.Post_Feed

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Post Feed</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="IDdePost" class="control-label">Post</label>
        <select asp-for="IDdePost" class="form-control" asp-items="@(new SelectList(ViewBag.Posts, "ID", "descripcion"))">
            <option value="">Select a Post</option>
        </select>
        <span asp-validation-for="IDdePost" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IDdeCuenta" class="control-label">ID de Cuenta</label>
        <input asp-for="IDdeCuenta" class="form-control" />
        <span asp-validation-for="IDdeCuenta" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<p>
